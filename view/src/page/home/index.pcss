.contentArea {
    width: calc(100% - var(--userListWidth));
    height: 100%;
    overflow: hidden auto;
    padding: 1em;


}

::-webkit-scrollbar {
    size: 0;
    background: transparent;
}

::-webkit-scrollbar-track {
    border-radius: 0;
}

::-webkit-scrollbar-thumb {
    background-color: transparent;
    transition: all .2s;

    &:hover {
        background-color: transparent;
    }
}